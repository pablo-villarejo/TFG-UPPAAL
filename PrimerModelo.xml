			<result outcome="success" type="quality" timestamp="2025-04-21 00:25:58 +0200">
			</result>
		</query>
		<query>
			<formula>A[] (Semaforo1.Verde imply Semaforo2.Verde) &amp;&amp; (Semaforo2.Verde imply Semaforo1.Verde)</formula>
