		</location>
		<location id="id1" x="-416" y="-8">
			<name x="-459" y="-42">DentroCruce</name>
			<label kind="invariant" x="-569" y="-17">t &lt;= tParadaMax</label>
		</location>
		<location id="id2" x="102" y="119">
			<name x="92" y="85">enLaParada</name>
			<label kind="invariant" x="43" y="136">t&lt;= tParadaMax</label>
		</location>
		<location id="id3" x="-271" y="162">
			<name x="-296" y="179">Alarma</name>
		</location>
		<init ref="id1"/>
		<transition id="id4">
			<source ref="id3"/>
			<target ref="id1"/>
			<label kind="guard" x="-484" y="102">cochesEnCruce == 0</label>
			<label kind="assignment" x="-484" y="119">t:=0 , 
metrosEnCruce++</label>
		</transition>
		<transition id="id5">
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="guard" x="-152" y="145">cochesEnCruce != 0</label>
		</transition>
		<transition id="id6">
			<source ref="id2"/>
			<target ref="id1"/>
			<label kind="guard" x="-246" y="-25">cochesEnCruce == 0</label>
			<label kind="assignment" x="-246" y="-8">t := 0 , 
metrosEnCruce++</label>
		</transition>
		<transition id="id7">
			<source ref="id0"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="332" y="43">metroAproximando!</label>
			<label kind="assignment" x="332" y="26">t := 0</label>
			<nail x="306" y="102"/>
		</transition>
		<transition id="id8">
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="-255" y="-161">metroSaliendo!</label>
			<label kind="assignment" x="-255" y="-144">t := 0, 
metrosEnCruce--</label>
			<nail x="-195" y="-84"/>
		</transition>
	</template>
	<template>
		<name>SemaforoCoche</name>
		<parameter>int[0,1] d</parameter>
		<declaration>clock t;</declaration>
		<location id="id9" x="458" y="-102">
			<name x="467" y="-127">Rojo</name>
		</location>
		<location id="id10" x="93" y="0">
			<name x="34" y="-25">Verde</name>
		</location>
		<location id="id11" x="212" y="-110">
			<committed/>
		</location>
		<location id="id12" x="340" y="0">
			<committed/>
		</location>
		<init ref="id9"/>
		<transition id="id13">
			<source ref="id9"/>
			<target ref="id12"/>
