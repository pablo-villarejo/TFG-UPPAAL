			<label kind="assignment" x="-68" y="-25">t:=0</label>
			<nail x="-59" y="0"/>
		</transition>
		<transition id="id22">
			<source ref="id20"/>
			<target ref="id17"/>
			<label kind="guard" x="-306" y="-85">semaforoCoche[d] == 0</label>
		</transition>
