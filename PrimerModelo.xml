			<label kind="assignment" x="42" y="-153">t:=0 ,
cochesEnCruce++</label>
			<nail x="34" y="-102"/>
			<nail x="109" y="-93"/>
		</transition>
		<transition id="id25">
			<source ref="id18"/>
			<target ref="id19"/>
